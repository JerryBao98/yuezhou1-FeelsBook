<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/emotionSummaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Your Emotion Summary "
            app:layout_constraintEnd_toEndOf="@+id/fearButton"
            app:layout_constraintStart_toStartOf="@+id/angerButton"
            app:layout_constraintTop_toBottomOf="@+id/angerButton" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Feeling Nostalgic?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Whats up?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listView" />

        <Button
            android:id="@+id/loveButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Love"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/joyButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Joy"
            app:layout_constraintStart_toEndOf="@+id/loveButton"
            app:layout_constraintTop_toTopOf="@+id/loveButton" />

        <Button
            android:id="@+id/surpriseButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Surprise"
            app:layout_constraintStart_toEndOf="@+id/joyButton"
            app:layout_constraintTop_toTopOf="@+id/loveButton" />

        <Button
            android:id="@+id/angerButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:text="Anger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loveButton" />

        <Button
            android:id="@+id/sadnessButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Sadness"
            app:layout_constraintStart_toEndOf="@+id/angerButton"
            app:layout_constraintTop_toTopOf="@+id/angerButton" />

        <Button
            android:id="@+id/fearButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Fear"
            app:layout_constraintStart_toEndOf="@+id/sadnessButton"
            app:layout_constraintTop_toTopOf="@+id/angerButton" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="395dp"
            android:layout_height="276dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </android.support.constraint.ConstraintLayout>